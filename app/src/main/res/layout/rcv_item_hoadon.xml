<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="center"
    android:layout_marginBottom="20sp">

    <LinearLayout
        android:id="@+id/layout_item_tensp"
        android:layout_below="@+id/layout_tensp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_tensp"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Main H61,Cpu G2020,Ram 4g , Hdd 250g,Vga gt730"
            android:textColor="@color/black"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:padding="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_tenkh"
        android:layout_below="@+id/layout_item_tensp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_tenkh"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn Dũng"
            android:textColor="@color/black"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:padding="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_sdt"
        android:layout_below="@+id/layout_item_tenkh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_sdt"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0914571542"
            android:textColor="@color/black"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:padding="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_soluong"
        android:layout_below="@+id/layout_item_sdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng xuất:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_soluong"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/black"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:padding="10sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_ngaythang"
        android:layout_below="@+id/layout_item_soluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="20sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày tháng:"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_item_ngaythang"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19/6/2021"
            android:textColor="@color/black"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:padding="10sp"/>
    </LinearLayout>

</RelativeLayout>